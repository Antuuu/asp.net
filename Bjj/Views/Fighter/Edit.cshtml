@model Bjj.Models.FighterViewModel 

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fighter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightCategory" class="control-label"></label>
                <select asp-for="WeightCategory" asp-items="@Html.GetEnumSelectList<WeightClasses>()" class="form-control" ></select>
                <span asp-validation-for="WeightCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeltColour" class="control-label"></label>
                <select asp-for="BeltColour" asp-items="@Html.GetEnumSelectList<BeltColours>()"class="form-control" ></select>
                <span asp-validation-for="BeltColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Academies)
                @Html.DropDownListFor(x => x.AcademyId, Model.Academies )   
            </div>             
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
